pipeline:
  stages:
  - stage: Display Date and Time
    steps:
    - script:
        date -u +'%d-%m-%Y %H:%M:%S %Z' -d '5 hours 30 minutes ago'
      id: display_date_and_time
    - script:
        date -u +'%d-%m-%Y %H:%M:%S %Z' -d '6 hours 30 minutes ago'
      id: display_date_and_time_ahead
    - echo: "Current date and time in IST: ${display_date_and_time.output}"
    - echo: "Date and time in IST one hour ahead: ${display_date_and_time_ahead.output}"
